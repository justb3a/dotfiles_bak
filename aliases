# docker
alias dcu='docker-compose up'
alias dcb='docker-compose build --no-cache'
alias dmt='docker run -ti --rm -v $(pwd):/usr/share/apps/ruby_worker apkworker_worker bundle exec ruby -Ilib:test'

function dockerstart() {
  if [ -z "$1" ]; then
    # if no parameters given
    docker-machine start klb
  else
    docker-machine start $1
  fi

  docker-compose up -d
  bin/console server:start
}

function dockerstop() {
  bin/console server:stop
  docker-compose stop

  if [ -z "$1" ]; then
    # if no parameters given
    docker-machine stop klb
  else
    docker-machine stop $1
  fi
}

function dre() {
  if [ -z "$1" ]; then
    # if no parameters given
    dockerstop
    dockerstart
  else
    dockerstop $1
    dockerstart $1
  fi
}

