# aliases for apache, nginx, php and mysql
alias apachestart='sudo apachectl start'
alias apachestop='sudo apachectl stop'
alias nginxstart='sudo nginx'
alias nginxstop='sudo nginx -s stop'
alias mysqlstart='mysql.server start'
alias mysqlstop='mysql.server stop'

alias deva='apachestart && mysqlstart'
alias devsa='apachestop && mysqlstop'
alias devra='devs && dev'

function bphp53() {
  brew unlink php54
  brew unlink php55
  brew unlink php56
  brew link php53
  vim /usr/local/etc/apache2/2.4/httpd.conf
  _restartPHPs
  dev 3
}

function bphp54() {
  brew unlink php53
  brew unlink php55
  brew unlink php56
  brew link php54
  vim /usr/local/etc/apache2/2.4/httpd.conf
  _restartPHPs
  dev 4
}

function bphp55() {
  brew unlink php53
  brew unlink php54
  brew unlink php56
  brew link php55
  vim /usr/local/etc/apache2/2.4/httpd.conf
  _restartPHPs
  dev 5
}

function bphp56() {
  brew unlink php53
  brew unlink php54
  brew unlink php55
  brew link php56
  vim /usr/local/etc/apache2/2.4/httpd.conf
  _restartPHPs
  dev
}

function _restartPHPs() {
  for i in {3..6}; do
    php=$(brew services list | grep php5$i)
    if [ "${php/started}" != "$php" ] ; then
      brew services stop php5$i
    fi
  done

  nginxstop
  mysqlstop
}


function dev() {
  if [ -z "$1" ]; then
    # if no parameters given
    brew services start php56
  else
    brew services start php5$1
  fi

  nginxstart
  mysqlstart
}

function devs() {
  if [ -z "$1" ]; then
    # if no parameters given
    brew services stop php56
  else
    brew services stop php5$1
  fi

  nginxstop
  mysqlstop
}

function devr() {
  if [ -z "$1" ]; then
    # if no parameters given
    devs
    dev
  else
    devs $1
    dev $1
  fi
}

